<!DOCTYPE html>

<html>
    <head>
        <title>picturesque</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
        
        <script src="https://use.fontawesome.com/33c1033732.js"></script>
    </head>
    <body>
    
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-picture"></span> <span id="brand-logo">picturesque</span></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if (!currentUser) { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                    <% } else { %>
                    <li><a id="current-user" href="/user/<%= currentUser._id %>"><%= currentUser.username %></a></li>
                    <li><a href="/logout">Logout</a></li>
                    <% } %>
                    
                </ul>
            </div>
        </div>
    </nav>
    
    <% if (error && error.length > 0) { %>
        <div class="container">
            <div class="alert alert-danger" role="alert"><%= error %></div>
        </div>
    <% } %>
    
     <% if ( success && success.length > 0) { %>
        <div class="container">
            <div class="alert alert-success" role="alert"><%= success %></div>
        </div>
    <% } %>
    