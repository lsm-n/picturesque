<% include ../partials/header %>

<div class="container">
    <div class="row">
            <!--SIDEBAR-->
            
        <div class="col-md-4">
            <h1><%= user.username %></h1>
            <img class="img-thumbnail" src="<%= user.profilePicture %>"> <hr>
            <p><%= user.description %></p>
            
            <hr>
            
            <% if(currentUser && user._id.equals(currentUser._id)) { %>
                <a class="btn btn-warning btn-sm" href="/user/<%= user._id %>/edit">Edit Site</a>
            <% } %>
            
        </div>

        <div class="col-md-8">
            <% if (!photos) { %>
                <h3>This user has not yet posted any photos</h3>
            <% }  else { %>
                <% for (var i = 0; i < photos.length; i++) { %>
                    <div class="thumbnail">
                        <img src="<%= photos[i].link %>">
                        <div class="caption">
                            <%= photos[i].caption %>
                            <div class="pull-right">
                                <p><a href="/sites/<%= site_ids[i] %>">(<%= site_names[i] %>)</a></p>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


<% include ../partials/footer %>