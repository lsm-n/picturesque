<% include ../partials/header %>

<div class="container">
    <div class="row">
            <h1>Register</h1>
            <div class="form-block">
                <form action="/user/<%= user._id %>?_method=PUT" method="POST">

                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.profilePicture %>" name="user[profilePicture]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.description %>" name="user[description]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-medium btn-default btn-block">Update Profile</button>
                    </div>
                </form>
            </div>
    </div>
</div>
<% include ../partials/footer %>