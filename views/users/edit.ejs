<% include ../partials/header %>

<div class="container">
    <div class="row">
            <h1>Edit Profile</h1>
            <div class="form-block">
                <form action="/user/<%= user._id %>?_method=PUT" method="POST">

                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.profilePicture %>" name="user[profilePicture]">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="text" name="user[description]"><%= user.description %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-medium btn-default btn-block">Update Profile</button>
                    </div>
                </form>
            </div>
    </div>
</div>
<% include ../partials/footer %>