<% include partials/header %>

<div class="container">
    <div class="row">
            <h1>Register</h1>
            <div class="form-block">
                <form action="/register" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="username" name="username">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" placeholder="password" name="password">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="profile picture link" name="profilePicture">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="text" placeholder="say a few words about yourself" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-medium btn-default btn-block">Register</button>
                    </div>
                </form>
                
                <a class="btn btn-info btn-medium btn-default btn-block" href="/login">Login</a>
            </div>
    </div>
</div>
<% include partials/footer %>