<% include ../partials/header %>

<div class="container">
    <div class="row">
            <h1>Create a New Site</h1>
            <div class="form-block">
                <form action="/sites" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="site name" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="words" name="description">
                    </div>
                    
                    <div class="form-group">
                        <input type="radio" name="score" value="1"> 1
                        <input type="radio" name="score" value="2"> 2
                        <input type="radio" name="score" value="3"> 3
                        <input type="radio" name="score" value="4"> 4
                        <input type="radio" name="score" value="5"> 5
                    </div>
                    
                    <h3>Add a Photo</h3>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="image url" name="photo[link]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="image caption" name="photo[caption]">
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-primary btn-medium btn-default btn-block">Submit</button>
                    </div>
                </form>
                <hr>
                <a class="form-control btn btn-small btn-info" href="/sites">Back to All Sites</a>
            </div>
    </div>
</div>
<% include ../partials/footer %>