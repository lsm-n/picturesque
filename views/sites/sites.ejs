<% include ../partials/header %>

<div class="container-fluid header">
    <header class="jumbotron">
        <h1 class="display-1">Welcome to Picturesque</h1>
        <p>Find a location for your next photoshoot</p>
        <p>
            <a class="btn btn-primary" href="/sites/new">add a new location</a>
        </p>
    </header>
</div>
<div class="container">
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h2>Most Popular Sites</h2>
        </div>
        
        <% for (var i = 0; i < sites.length; i++) { %>
            <div class= "col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= sites[i].photos[0].link %>">
                    <h4><%= sites[i].name %></h4>
                    <p>
                        <a href="/sites/<%= sites[i]._id %>" class="btn btn-default btn-sm">More Info</a>
                    </p>
                </div>
            </div>
        <% } %>
            
    </div>
</div>

<% include ../partials/footer %>