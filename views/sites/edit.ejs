<% include ../partials/header %>

<div class="container">
    <div class="row">
            <h1>Edit <%= site.name %></h1>
            <div class="form-block">
                <form action="/sites/<%= site._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value= "<%= site.name %>" name="site[name]" required>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="text" name="site[description]" required><%= site.description %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-primary btn-medium btn-default btn-block">Submit</button>
                    </div>
                </form>
                
                <form action="/sites/<%= site._id %>?_method=DELETE" method="POST">
                    <div class="form group">
                        <button class="form-control btn btn-small btn-danger">Delete Site</button>
                    </div>
                </form>
                <hr>
                <a class = "form-control btn btn-small btn-info" href="/sites">Back to All Sites</a>
            </div>
    </div>
</div>
<% include ../partials/footer %>